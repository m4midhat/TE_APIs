<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" parallel="false">
    <listeners>
        <listener class-name="te.application.listener.extentReportListener" />
        <listener class-name="te.application.Analyzer.AnnotationTransformer" />
    </listeners>

    <test name="Forgot Password">
        <classes>
            <class name="te.application.api.test.B2C.positive.ForgetPasswordTest" />
        </classes>
    </test>

    <test name="Sign Up Negative Scenarios">
        <classes>
            <class name="te.application.api.test.B2C.negative.SignUpTest" />
        </classes>
    </test>

    <test name="Sign Up">
        <classes>
            <class name="te.application.api.test.B2C.positive.SignUpTest" />
        </classes>
    </test>

    <test name="Sign In Negative Scenarios">
        <classes>
            <class name="te.application.api.test.B2C.negative.SignInTest" />
        </classes>
    </test>



</suite>